{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6",
    "baseUrl": ".",
    "paths": {
      "@nubras/ui": ["packages/ui/dist"],
      "@nubras/utils": ["packages/utils/dist"]
    }
  },
  "include": ["packages/*/src", "packages/ui/scripts", "packages/utils/lib"],
  "exclude": ["node_modules", "dist"]
}
